FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0.3 0 0);

boundaryField
{
    inlet
    {
        // Uniform inlet velocity (simplified from Poiseuille profile)
        // Original: ux = 6*Umean*(y/H)*(1-y/H), Umean = 0.3 m/s
        type            fixedValue;
        value           uniform (0.3 0 0);
    }

    outlet
    {
        type            zeroGradient;
    }

    topWall
    {
        type            noSlip;
    }

    bottomWall
    {
        type            noSlip;
    }

    obstacle
    {
        type            noSlip;
    }

    front
    {
        type            symmetryPlane;
    }

    back
    {
        type            symmetryPlane;
    }
}

// ************************************************************************* //


